page{
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color:#ECECEC;
    
   
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #8b0000;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #8b0000;
}

.team {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.line{
  margin-top: 20rpx;
  width:100%;
  height:5rpx;
  background:#aaa;
  }
  
  