<view class="header">
  <view class="container headercon">
    <navigator open-type="switchTab" url="/pages/index/index" class="logo">
      <image mode="heightFix" src="/images/logo.png"></image>
    </navigator>
  </view>
</view>

<view class="banner">
  <swiper indicator-dots indicator-color="rgba(255,255,255,0.5)" indicator-active-color="#fff" circular autoplay interval="3500">
    <swiper-item><image src="/images/lunbo4.jpg"></image></swiper-item>
    <swiper-item><image src="/images/lunbo7.jpg"></image></swiper-item>
    <swiper-item><image src="/images/lunbo5.png"></image></swiper-item>
  </swiper>  
</view>

<view class="dynamic">
  <view class="container">

    <view class="pubtitle">
      <view class="text">比赛推荐</view>
      <navigator class="more" url="/pages/competition/competition">更多></navigator>
    </view>

    <view class="dymain">

      <navigator class="dyitem"  wx:for="{{dataList}}">
        <view class="pic">
          <image src="{{item.picurl}}"></image>
        </view>
        <view class="text">
          <view class="title">
            {{item.title}}
          </view>
          <view class="info">
            发布者： <text space="ensp">  {{item.name}} -   </text> 
            时间：{{item.posttime}}
          </view>
        </view>
      </navigator>


      <navigator class="dyitem"  >
        <view class="pic">
          <image src="/images/acm.jpg"></image>
        </view>
        <view class="text">
          <view class="title">
            第XX届ACM国际大学生程序设计竞赛
          </view>
          <view class="info">
            发布者： <text space="ensp">  张某 -   </text> 时间：2021-6-20
          </view>
        </view>
      </navigator>

      <navigator class="dyitem"  >
        <view class="pic">
          <image src="/images/tjb.jpg"></image>
        </view>
        <view class="text">
          <view class="title">
            第XX届“挑战杯” 全国大学生课外学术科技作品竞赛
          </view>
          <view class="info">
            发布者： <text space="ensp">  李某 -   </text> 时间：2021-6-20
          </view>
        </view>
      </navigator>

      <navigator class="dyitem"  >
        <view class="pic">
          <image src="/images/hlw+.jpg"></image>
        </view>
        <view class="text">
          <view class="title">
            第X届中国国际“互联网+”大学生创新创业大赛
          </view>
          <view class="info">
            发布者： <text space="ensp">  王某 -   </text> 时间：2021-6-20
          </view>
        </view>
      </navigator>

      <navigator class="dyitem"  >
        <view class="pic">
          <image src="/images/sxjm.jpg"></image>
        </view>
        <view class="text">
          <view class="title">
            20XX年“高教杯”全国大学生数学建模竞赛
          </view>
          <view class="info">
            发布者： <text space="ensp">  杨某 -   </text> 时间：2021-6-20
          </view>
        </view>
      </navigator>
    </view>

  </view>
</view>
